<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AlarmFragment"
    android:background="@color/main_background">

    <TextView
        android:id="@+id/txt_TimeVN_WorldTimeFrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="08 : 00"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/date_WorldTimeFrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sat, Jul 23"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_below="@id/txt_TimeVN_WorldTimeFrg"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_Alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/date_WorldTimeFrg"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_addWorldTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_nav"
        android:backgroundTint="@color/color_yellow"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        app:borderWidth="0dp"
        android:src="@drawable/ic_plus" />
</RelativeLayout>