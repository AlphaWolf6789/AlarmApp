<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quick Alarm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/time_QuickAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ 00 : 00"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_60m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+60m"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:backgroundTint="@color/main_background"/>
        <Button
            android:id="@+id/btn_30m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+30m"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:backgroundTint="@color/main_background"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn_15m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+15m"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:backgroundTint="@color/main_background"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_10m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+10m"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:backgroundTint="@color/main_background"/>
        <Button
            android:id="@+id/btn_5m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5m"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:backgroundTint="@color/main_background"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn_1m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1m"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:backgroundTint="@color/main_background"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_resetQuickAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">
            <ImageView
                android:layout_width="85dp"
                android:layout_height="45dp"
                android:background="@color/main_background"
                android:src="@drawable/ic_replay_white"
                />
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btn_saveQuickAlarm"
            android:layout_width="185dp"
            android:layout_height="55dp"
            android:text="Save"
            android:textStyle="bold"
            android:textSize="23dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/color_yellow"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

</LinearLayout>